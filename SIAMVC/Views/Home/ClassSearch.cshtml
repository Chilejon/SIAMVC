@model SIAMVC.Models.IndexViewModel

@{
	var cssClass = "govuk-heading-l";
	var baseCssClasses = "govuk-input";
	ViewData["Title"] = "Home Page";

}

	<div class="text-center">
		<h1 class="@cssClass">Stockport image archive</h1>
		<partial name="SearchForm" model="Model" />

		@foreach (var photograph in Model.Photographs)
		{
			<a href="@Url.Action("Photograph", "Home", new { accessionno = photograph.AccessionNo.Trim(), searchString = Model.SearchString.Trim(), searchOption = Model.SearchOption.Trim(), searchArea = Model.SearchArea.Trim() })">
				<img src=@photograph.url onError="this.onerror=null;this.src='../assets/images/notfound.jpg';" />
				<p class="govuk-caption-m" style="margin-top:2px">@photograph.Title</p>
			</a>
		}
	</div>
